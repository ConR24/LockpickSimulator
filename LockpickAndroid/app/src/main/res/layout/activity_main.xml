<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ryan.lockpickandroid.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Select a button to pick the lock"
        android:id="@+id/textView" />
    <Button
        android:text="Pick 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="175dp"
        android:id="@+id/Pick1"
        android:onClick="updatePick1"/>
    <Button
        android:text="Feel 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Pick1"
        android:layout_alignParentLeft="true"
        android:id="@+id/Feel1"
        android:onClick="updateFeel1" />
    <Button
        android:text="Pick 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/Pick1"
        android:layout_above="@+id/Feel1"
        android:id="@+id/Pick2"
        android:onClick="updatePick2" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Pick2"
        android:layout_toRightOf="@+id/Feel1"
        android:id="@+id/Feel2"
        android:text="Feel 2"
        android:onClick="updateFeel2" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Pick3"
        android:layout_toRightOf="@+id/Pick2"
        android:layout_above="@+id/Feel1"
        android:text="Pick 3"
        android:onClick="updatePick3" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Feel3"
        android:text="Feel 3"
        android:layout_below="@id/Pick3"
        android:layout_toRightOf="@id/Feel2"
        android:onClick="updateFeel3" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick 4"
        android:id="@+id/Pick4"
        android:layout_toRightOf="@id/Pick3"
        android:layout_above="@id/Feel2"
        android:onClick="updatePick4" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Feel 4"
        android:id="@+id/Feel4"
        android:layout_below="@id/Pick4"
        android:layout_toRightOf="@id/Feel3"
        android:onClick="updateFeel4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status will update here"
        android:id="@+id/StatusView"
        android:layout_marginBottom="75dp"
        android:layout_above="@+id/Feel1"
        android:layout_toRightOf="@+id/Pick1"
        android:layout_toEndOf="@+id/Pick1" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Feel1"
        android:id="@+id/Rake"
        android:text="Rake"
        android:onClick="updateRake" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Feel2"
        android:layout_toRightOf="@+id/Rake"
        android:id="@+id/Reset"
        android:text="Reset"
        android:onClick="updateReset" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/Reset"
        android:layout_below="@+id/Feel3"
        android:id="@+id/Unlock"
        android:text="Unlock"
        android:onClick="updateUnlock" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Feel4"
        android:layout_toRightOf="@+id/Unlock"
        android:id="@+id/About"
        android:text="About"
        android:onClick="updateAbout"/>

</RelativeLayout>
